---
import { Countdown } from "../components/Countdown";
import Form from "../components/Form.astro";
import Layout from "../layouts/Layout.astro";


---
<Layout title="Officelite">
    <main>
        <section>
            <article>
                <div>
                    <h2>Work smarter. Save time.</h2>
                    <p>Easily manage your projects. Get on the list and receive in-app perks available only to early subscribers. We are moving into final development and getting ready for official launch soon.</p>
                </div>
                <Countdown comingDate="11/20/2024" isDark={false} client:load />
            </article>
            <Form />
        </section>
        <section class="simil-footer">

        </section>
    </main>
</Layout>

<style>
    main {
        display: flex;
        flex-direction: column;
        background-image: url('/assets/images/form_bg_desk.svg'), linear-gradient(to right, #FFF calc(100% - 420px), var(--black) 420px);
        background-repeat: no-repeat;
        background-size: contain;
        background-position: right;
        height: 100vh;
        width: 100%;
        position: absolute;
        justify-content: center;
        z-index: -1;
    }

    section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding-inline: 11.5%;
    }

    article {
        display: flex;
        flex-direction: column;
        gap: 40px;
        width: 540px;

        & > div {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        & > div > h2 {
            color: var(--dark-gray);
            font-family: 'Kumbh Sans', sans-serif;
            font-size: 56px;
            font-weight: 700;
            line-height: 64px;
            text-wrap: balance;
        }

        & > div > p {
            color: var(--gray);
            font-family: 'Kumbh Sans', sans-serif;
            font-size: 18px;
            font-weight: 400;
            line-height: 28px;
        }
    }

    .simil-footer {
        display: none;
    }

    @media screen and (width <= 1250px) {
        main {
            background-image: none;
            height: 1315px;
        }

        section {
            flex-direction: column;
            justify-content: center;
            gap: 104px;
        }

        article {
            align-items: center;
            width: 572px;

            & > div {
                text-align: center;
            }

            & > div > h2 {
                font-size: 40px;
                line-height: 48px;
                text-wrap: nowrap;
            }

            & > div > p {
                font-size: 16px;
                line-height: 26px;
            }
        }

        .simil-footer {
            position: absolute;
            bottom: 0;
            display: block;
            height: 380px;
            background-color: var(--black);
            background-image: url('/assets/images/contactFormOval.svg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            z-index: -1;
        }
    }

    @media screen and (width <= 750px) {
        main {
            height: 1236px;
            padding-inline: 6.4%;
        }

        section {
            gap: 64px;
        }

        article {
            width: 327px;
            padding-inline: 5.2%;

            & > div > h2 {
                text-wrap: balance;
            }
        }

        .simil-footer {
            height: 320px;
            width: 100%;
            left: 0;
        }
    }
</style>