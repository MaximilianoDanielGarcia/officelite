---
import { Countdown } from "./Countdown";
import Link from "./Link.astro";
---

<footer>
    <Countdown comingDate="11/20/2024" isDark={true} client:load />
    <Link
        href="/login"
        text="Get Started"
        color="#fff"
        bgColor="#5175ff"
        withShadow
        hoverBgColor="#829cff"
    />
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-between;
        align-items: end;
        padding-block: 91px;
        padding-inline: 11.5%;
        width: 100%;
        height: 603px;
        background-image: url("/assets/images/footer_bg_desk.svg");
        background-repeat: no-repeat;
        background-color: var(--black);
    }

    @media screen and (width <= 1250px) {
        footer {
            flex-direction: column;
            justify-content: end;
            align-items: center;
            gap: 48px;
            height: 986px;
            padding-inline: 5.2%;
            background-image: url("/assets/images/footer_bg_tab.svg");
            background-position: center;
            background-size: cover;
        }
    }

    @media screen and (width <= 750px) {
        footer {
            gap: 40px;
            height: 1248px;
            padding-inline: 6.4%;
            background-image: url("/assets/images/footer_bg_mob.svg");
            background-position: bottom;
            background-size: cover;
        }
    }
</style>
