---
import Link from "./Link.astro";
import Select from "./Select.astro";
---

<form autocomplete="off">
    <div>
        <input type="text" name="username" id="username" placeholder="Name" minlength="2" maxlength="50">
        <input type="email" name="email" id="email" placeholder="Email Address">
        <Select />
        <input type="tel" name="tel" id="tel" placeholder="Phone Number" minlength="9" maxlength="14">
        <input type="text" name="company" id="company" placeholder="Company" maxlength="50">
    </div>
   
    <Link
        href="/"
        text="Get on the list"
        color="#fff"
        bgColor="#5175ff"
        hoverBgColor="#829cff"
        fullWidth
    />
</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: center;
        gap: 40px;
        padding: 50px 42px;
        width: 445px;
        height: 508px;
        border-radius: 13px;
        background: #fff;
        box-shadow: 0px 50px 50px -25px rgba(75, 92, 154, 0.25);

        & > div {
            display: flex;
            width: 100%;
            flex-direction: column;
            justify-content: start;
            align-items: center;
            gap: 24px;
        }
    }

    input {
        width: 100%;
        height: 45px;
        border: none;
        border-bottom: 1px solid #cacaca;
        color: var(--dark-gray);
        font-family: 'Kumbh Sans', sans-serif;
        font-size: 16px;
        line-height: 28px;
        padding: 16px;
        outline: none;
        position: relative;
    }

    input::placeholder {
        opacity: 0.5;
    }

    input:not(:focus):invalid {
        color: var(--tomato);
        background-image: url('/assets/images/errorIcon.svg');
        background-repeat: no-repeat;
        background-position: 96% center;
    }

    @media screen and (width <= 750px) {
        form {
            padding: 24px;
            width: 327px;
            height: 465px;
        }
    }
    
</style>